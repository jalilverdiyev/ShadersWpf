<Window
    Height="450"
    SnapsToDevicePixels="True"
    Title="Shaders"
    UseLayoutRounding="True"
    Width="800"
    d:DataContext="{d:DesignInstance vm:MainWindowViewModel}"
    mc:Ignorable="d"
    x:Class="ShadersWpf.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ShadersWpf.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ShaderBtnStyle">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border
                                Background="#131B29"
                                CornerRadius="10"
                                Name="PART_BG" />

                            <TextBlock
                                FontSize="14"
                                Foreground="#fff"
                                HorizontalAlignment="Center"
                                Margin="10,0"
                                Name="PART_Label"
                                Text="{TemplateBinding Content}"
                                VerticalAlignment="Center" />
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderThickness" TargetName="PART_BG" Value="1" />
                                <Setter Property="BorderBrush" TargetName="PART_BG" Value="#00CCFF" />
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="PART_BG" Value="#00CCFF" />
                                <Setter Property="Foreground" TargetName="PART_Label" Value="#000" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
            <Button
                Command="{Binding ChangeEffect}"
                CommandParameter="{x:Static vm:ShaderEffectType.Grayscale}"
                Content="Grayscale"
                Style="{DynamicResource ShaderBtnStyle}" />

            <Button
                Command="{Binding ChangeEffect}"
                CommandParameter="{x:Static vm:ShaderEffectType.SepiaTone}"
                Content="Sepia tone"
                Margin="10,0,0,0"
                Style="{DynamicResource ShaderBtnStyle}" />

            <Button
                Command="{Binding ChangeEffect}"
                CommandParameter="{x:Static vm:ShaderEffectType.Invert}"
                Content="Invert"
                Margin="10,0,0,0"
                Style="{DynamicResource ShaderBtnStyle}" />

            <Button
                Command="{Binding ChangeEffect}"
                CommandParameter="{x:Static vm:ShaderEffectType.Ripple}"
                Content="Ripple"
                Margin="10,0,0,0"
                Style="{DynamicResource ShaderBtnStyle}" />

            <Button
                Command="{Binding ChangeEffect}"
                CommandParameter="{x:Static vm:ShaderEffectType.ScanlineDistortion}"
                Content="Scanline distortion"
                Margin="10,0,0,0"
                Style="{DynamicResource ShaderBtnStyle}" />
        </StackPanel>

        <Button
            Command="{Binding ChangeEffect}"
            CommandParameter="{x:Static vm:ShaderEffectType.None}"
            Content="Reset"
            Grid.Column="1"
            Grid.Row="0"
            Margin="0,0,10,0"
            Style="{DynamicResource ShaderBtnStyle}" />

        <StackPanel
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            VerticalAlignment="Center">
            <Border
                Background="#00DA7B"
                CornerRadius="5"
                Effect="{Binding Effect}"
                Height="200"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True"
                Width="200" />

            <Border
                CornerRadius="5"
                Effect="{Binding Effect}"
                Height="200"
                Margin="20,0,0,0"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True"
                Width="200">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0, 1" StartPoint="0, 0">
                        <GradientStop Color="#7BDA00" />
                        <GradientStop Color="#DA7B00" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Border
                CornerRadius="5"
                Effect="{Binding Effect}"
                Height="200"
                Margin="20,0,0,0"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True"
                Width="200">
                <Border.Background>
                    <ImageBrush
                        ImageSource="/Images/example.jpeg"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Stretch="UniformToFill" />
                </Border.Background>
            </Border>
        </StackPanel>
    </Grid>
</Window>
